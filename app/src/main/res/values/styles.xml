<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Header23" parent="MainText">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="Header25" parent="MainText">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MainText.Purple">
        <item name="android:textColor">#5500ce</item>
    </style>

    <style name="MainText.Subheader">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainText.Subheader.Purple">
        <item name="android:textColor">#5500ce</item>
    </style>



</resources>
